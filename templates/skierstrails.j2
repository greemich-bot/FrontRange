{% extends "main.j2" %}
{% block content %}

<h1>Skiers Trails</h1>

{# READ table #}
<table>
    <thead>
        {# For the table header row, we print the DB attribute names #}
        <tr>
            {% for key in skierstrails[0].keys() %}
            <th>{{ key }}</th>
            {% endfor %}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {# For each row, print the id, fname, lname, homeworld and age #}
        {% for skier in skierstrails %}
        <tr>
            <td>{{ skier.SkiersTrailsID }}</td>
            <td>{{ skier.Skiers_SkierID}}</td>
            <td>{{ skier.Trails_TrailID }}</td>
            

            {# DELETE form #}
            <form id="delete_person_form">
                <input type="hidden" name="delete_person_id" value="{{ skier.SkiersTrailsID }}">
                <input type="hidden" name="delete_person_name" value="{{ skier.Skiers_SkierID }}">
                <td>
                    <button type="submit">
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {% endfor %}
    </tbody>
</table>


{% endblock %}