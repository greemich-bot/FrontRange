{% extends "main.j2" %}
{% block content %}

<h1>Skiers Trails</h1>

{# READ table #}
<table>
    <thead>
        {# For the table header row, we print the DB attribute names #}
        <tr>
            <th>ID</th>
            <th>Skier Name</th>
            <th>Trail Name</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        {# For each row, print the id, fname, lname, homeworld and age #}
        {% for skier in skierstrails %}
        <tr>
            <td>{{ skier.SkiersTrailsID }}</td>
            <td>{{ skier.SkierName }}</td>
            <td>{{ skier.TrailName }}</td>
            

            {# DELETE form #}
            <form id="delete_skiertrail_form">
                <input type="hidden" name="delete_skiertrail_id" value="{{ skier.SkiersTrailsID }}">
                <input type="hidden" name="delete_skiertrail_name" value="{{ skier.SkierName }}">
                <td>
                    <button type="submit">
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {% endfor %}
    </tbody>
</table>


{% endblock %}