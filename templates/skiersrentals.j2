{% extends "main.j2" %}
{% block content %}

<h1>Skiers Rentals</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Skier Name</th>
            <th>Rental Item</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        {% for skier in skiersrentals %}
        <tr>
            <td>{{ skier.SkiersRentalsID }}</td>
            <td>{{ skier.SkierName }}</td>
            <td>{{ skier.ItemType }}</td>
            <td>
                <div style="display: flex; gap: 10px;">
                    <!-- Update Button -->
                    <a href="{{ url_for('edit_rental', rental_id=skier.SkiersRentalsID) }}">
                        <button type="button">Update</button>
                    </a>

                    <!-- Delete Form -->
                    <form id="delete_person_form">
                <input type="hidden" name="delete_person_id" value="{{ skier.SkiersRentalsID }}">
                <input type="hidden" name="delete_person_name" value="{{ skier.SkierName }}">
                <td>
                    <button type="submit">
                        Delete
                    </button>
                </td>
            </form>
                </div>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="4">No rentals found in the system.</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}


